<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omkar.geoacc.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/x_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="37dp"
        android:text="X:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/y_tv"
        app:layout_constraintEnd_toEndOf="@+id/y_tv"
        app:layout_constraintStart_toStartOf="@+id/y_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/y_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Y:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/z_tv"
        app:layout_constraintEnd_toEndOf="@+id/z_tv"
        app:layout_constraintStart_toStartOf="@+id/z_tv"
        app:layout_constraintTop_toBottomOf="@+id/x_tv" />

    <TextView
        android:id="@+id/z_tv"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Z:"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gps_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/y_tv" />

    <TextView
        android:id="@+id/gps_tv"
        android:layout_width="285dp"
        android:layout_height="220dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/y_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/z_tv"
        app:layout_constraintTop_toBottomOf="@+id/z_tv"
        app:layout_constraintVertical_bias="0.593" />
</android.support.constraint.ConstraintLayout>
